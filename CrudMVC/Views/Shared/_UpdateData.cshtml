@model CrudMVC.Models.employee


<div class="modal-body">

    @using (Html.BeginForm("Update", "Employee", FormMethod.Post))
    {

        <div class="container">

            <div class="form-group">

                <label>Name</label>
                @Html.ValidationMessageFor(x => x.FullName, "", new { @class = "error" })
                @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })


            </div>
            <div class="form-group">

                <label>Age</label>
                @Html.ValidationMessageFor(x => x.Age, "", new { @class = "error" })
                @Html.TextBoxFor(x => x.Age, new { @type = "number", @onkeypress = "return this.value.length<=1", @class = "form-control" })

            </div>
            <div class="form-group">

                <label>Hire Date</label>
                @Html.ValidationMessageFor(x => x.StartDate, "", new { @class = "error" })
                @Html.TextBoxFor(x => x.StartDate, new { @type = "date", @max = "9999-12-31", @class = "form-control" })

            </div>
            <div class="form-group">
                <label>Salary</label>
                @Html.ValidationMessageFor(x => x.Salary, "", new { @class = "error" })
                @Html.TextBoxFor(x => x.Salary, new { @type = "number", @class = "form-control" })

            </div>
            <div class="form-group">

                <button type="submit" class="btn btn-primary">Update</button>
                <button type="reset" class="btn btn-primary">Reset</button>

            </div>

        </div>
    }


</div>
